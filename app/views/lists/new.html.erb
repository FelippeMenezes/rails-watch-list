<div class="lists-new">
    <div class="container w-75">
        <h1> Create a New List</h1>
        <%= simple_form_for @list do |f| %>
            <%= f.input :name, placeholder: 'Drama' %>
            <%= f.submit class: 'btn btn-success' %>
        <% end %>
        <%= link_to "Back to Lists", lists_path, class: "back-to-lists btn btn-secondary mt-3" %>
    </div>
</div>