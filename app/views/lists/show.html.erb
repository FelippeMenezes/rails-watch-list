<div class="lists-show">
    <div class="d-flex justify-content-end">
        <button class="btn btn-warning m-3"><%= "#{@list.movies.count} movies" %></button>
    </div>
    <div class="d-flex justify-content-center align-items-center">
        <h1><%= @list.name %> Movies</h1>
    </div>
</div>
<div class="container">
    <div class="d-flex justify-content-end my-3">
        <%= link_to "add a Movie", new_list_bookmark_path(@list), class: "btn btn-success" %>
    </div>
    <div class="cards">
        <% @list.movies.each do |movie| %>
            <div class="card">
                <%= image_tag movie.poster_url, class: "img-card" %>
                <div class="d-flex justify-content-start align-items-baseline mx-2 mt-2">
                    <h3 class="movie-title"><%= movie.title%></h3>
                    <h3 class="movie-rating"><li><%= movie.rating %></li></h3>
                    <p><i class="fa-solid fa-star mx-1" style="color: #FFD43B;"></i></p>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <p class="movie-overview"><%= movie.overview %></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div><i class="fa-solid fa-quote-left fa-xl"></i> <%= movie.bookmarks.find_by(list: @list).comment %></div>
                        <%= link_to "Delete", bookmark_path(movie.bookmarks.find_by(list: @list)), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-link text-decoration-none text-danger" %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <%= link_to "Back to Lists", lists_path, class: "btn btn-secondary my-3" %>
    </div>
</div>