<div class="container">
    <h1><%= @list.name %> Movies</h1>
    <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :movie_id, collection: Movie.all, prompt: 'Select a Movie' %>
          <%= f.input :comment, placeholder: 'Great movie!' %>
          <%= f.submit class: 'btn btn-flat', value: 'Add Movie'%>
    <% end %>
    <%= link_to "Back to Lists", lists_path, class: "btn btn-flat" %>
</div>