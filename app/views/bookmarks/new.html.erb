<div class="bookmarks-new">
    <div class="container w-75">
        <h1><%= @list.name %> Movies</h1>
        <%= simple_form_for [@list, @bookmark] do |f| %>
            <%= f.input :movie_id, collection: Movie.all, prompt: 'Select a Movie' %>
            <%= f.input :comment, placeholder: 'Great movie!' %>
            <%= f.submit class: 'btn btn-success', value: 'Add Movie'%>
        <% end %>
        <%= link_to "Back to Lists", lists_path, class: "btn btn-secondary mt-3" %>
    </div>
</div>